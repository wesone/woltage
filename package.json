{
  "name": "woltage-monorepo",
  "version": "1.0.0",
  "description": "Woltage - A CQRS and Event-Sourcing Framework",
  "license": "ISC",
  "author": "wesone",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "find ./packages -maxdepth 2 ! -path \"*/node_modules/*\" -name \"package.json\" -printf '%p\n' -execdir npm run build \\;",
    "postinstall": "find ./packages -maxdepth 2 ! -path \"*/node_modules/*\" -name \"package.json\" -printf '%p\n' -execdir npm i \\;",
    "link": "find ./packages -maxdepth 2 ! -path \"*/node_modules/*\" ! -path \"*/woltage/*\" -name \"package.json\" -printf '%p\n' -execdir npm link ../woltage \\;",
    "test": "node --test --experimental-test-coverage --test-coverage-exclude=packages/**/test/**/* 'packages/**/*.test.*'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wesone/woltage.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.15.3",
    "eslint": "^9.25.1",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.56.0",
    "weslint": "github:wesone/eslint"
  }
}